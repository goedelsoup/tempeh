{
  "name": "@tempeh/project",
  "version": "0.1.0",
  "description": "Project management for Tempeh CLI",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@tempeh/api": "workspace:*",
    "@tempeh/types": "workspace:*",
    "@tempeh/utils": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
