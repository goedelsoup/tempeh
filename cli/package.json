{
  "name": "@tempeh/cli",
  "version": "0.1.0",
  "description": "Modern CLI wrapper around CDKTF with improved workflows and state management",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tempeh": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:executable": "node esbuild.config.js",
    "build:simple": "node esbuild.config.simple.js",
    "bundle": "node esbuild.config.js",
    "bundle:simple": "node esbuild.config.simple.js",
    "bundle:watch": "node esbuild.config.js --watch",
    "distribute": "./distribute.sh",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo",
    "start": "node ./dist/cli.js"
  },
  "dependencies": {
    "@tempeh/api": "workspace:*",
    "@tempeh/core": "workspace:*",
    "@tempeh/project": "workspace:*",
    "@tempeh/provider": "workspace:*",
    "@tempeh/state": "workspace:*",
    "@tempeh/types": "workspace:*",
    "@tempeh/utils": "workspace:*",
    "@tempeh/workflow": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "effect": "^3.17.8",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@types/inquirer": "^9.0.7",
    "esbuild": "^0.19.0",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
